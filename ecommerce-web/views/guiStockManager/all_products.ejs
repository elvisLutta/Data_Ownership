<%- include('../base/header.ejs') -%>
      <div class="row">
        <div class="col-md-8 col-md-offset-2 table-responsive">
          <h2 class="text-center">All Products</h2>
          <table class="table">
            <thead>
              <tr>
                <th>id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Total Stock</th>
              </tr>
            </thead>
            <tbody>
            <% for (var i = 0; i < products.length; i++) { %>
              <tr>
                <td><%= i + 1 %></td>
                <td>
                  <a href="/stock/gui/product/<%=products[i].id %>">
                    <span class="label label-info"><%= products[i].productName %></span>
                  </a>
                </td>
                <td><%= products[i].price %></td>
                <td><%= products[i].totalStock %></td>
              </tr>
            <% } %>
            </tbody>
          </table>
        </div>
      </div>

<%- include('../base/footer.ejs') -%>
